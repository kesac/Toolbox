<Window x:Class="Kesac.Toolbox.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kesac.Toolbox.Desktop"
        mc:Ignorable="d"
        Title="Kevin's Toolbox" Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="12"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <materialDesign:Card Padding="8" Margin="8">
                <TabControl x:Name="TabControlMainNavigation" SelectionChanged="TabControlMainNavigation_SelectionChanged">
                    <TabItem Header="Set Comparison" />
                    <TabItem Header="String Transform" />
                    <TabItem Header="Tool 3" />
                    <TabItem Header="Tool 4" />
                    <TabItem Header="Tool 5" />
                </TabControl>

                
            </materialDesign:Card>
        </StackPanel>

        <Grid Grid.Row="1" Name="GridSetComparison">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Column="0" Padding="8" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Grid.Row="0" 
                                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                           Text="Left Set">
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="{materialDesign:PackIcon Pencil}" Background="Transparent" BorderThickness="0" Click="OnButtonEditLabel"></Button>
                                <Button Content="{materialDesign:PackIcon ArrowTopRightThick}" Background="Transparent" BorderThickness="0" Click="OnButtonExportToClipboard"></Button>
                            </StackPanel>
                        </Grid>
                        <TextBox Name="TextBoxLeftSet"
                                 Grid.Row="1"
                                 Width="Auto"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="TextBox_Changed"/>
                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="1" Padding="8" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Grid.Row="0" 
                                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                           Text="Right Set">
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="{materialDesign:PackIcon Pencil}" Background="Transparent" BorderThickness="0" Click="OnButtonEditLabel"></Button>
                                <Button Content="{materialDesign:PackIcon ArrowTopRightThick}" Background="Transparent" BorderThickness="0" Click="OnButtonExportToClipboard"></Button>
                            </StackPanel>
                        </Grid>
                        <TextBox Name="TextBoxRightSet"
                                 Grid.Row="1"
                                 Width="Auto"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="TextBox_Changed"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Column="0" Padding="8" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Style="{DynamicResource MaterialDesignBody1TextBlock}">Left Exclusive</TextBlock>
                        <TextBox Name="TextBoxLeftExclusive"
                                 Grid.Row="1"
                                 Width="Auto"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="1" Padding="8" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Style="{DynamicResource MaterialDesignBody1TextBlock}">Intersect</TextBlock>
                        <TextBox Name="TextBoxIntersect"
                                 Grid.Row="1"
                                 Width="Auto"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="2" Padding="8" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Style="{DynamicResource MaterialDesignBody1TextBlock}">Right Exclusive</TextBlock>
                        <TextBox Name="TextBoxRightExclusive"
                                 Grid.Row="1"
                                 Width="Auto"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

        </Grid>

        <Grid Grid.Row="1" Name="GridStringTransform" Visibility="Collapsed">
            
        </Grid>
        
    </Grid>
</Window>
